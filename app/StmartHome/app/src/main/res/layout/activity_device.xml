<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/devmanger_bj"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eden.stmarthome.activities.DeviceActivity">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/led1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/closeled_ico" />


        <Switch
            android:id="@+id/ledon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/off" />

        <ImageView
            android:id="@+id/led2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/closeled_ico" />

        <Switch
            android:id="@+id/ledon2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/off" />

        <ImageView
            android:id="@+id/feng"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/closefan_ico" />

        <Switch
            android:id="@+id/openfen"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/off" />

        <ImageView
            android:id="@+id/door"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/closedoor_ico" />

        <Switch
            android:id="@+id/opendoor"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/off" />
    </LinearLayout>


</RelativeLayout>
